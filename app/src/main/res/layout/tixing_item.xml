<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <demo.example.com.mydrinkwater.zidiyiview.TixingDrawLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl">
        <demo.example.com.mydrinkwater.zidiyiview.TixingView
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txview"
            custom:bellimage="@drawable/sample_ic_bell"
            custom:time="10:00"
            custom:timecolor="#0000ff"
            custom:timesize="14sp"
            custom:on_off="@drawable/tb_on"

            />
    </demo.example.com.mydrinkwater.zidiyiview.TixingDrawLayout>
</LinearLayout>
